<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="personal_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@mipmap/navigation_return</item>
    </style>

    <style name="PackTabLayout" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="android:textSize">35sp</item>
        <item name="tabSelectedTextColor">@android:color/holo_red_dark</item>
    </style>
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/gray</item>
        <item name="textAllCaps">false</item>
    </style>
    <!--分割线-->
    <style name="finelin" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/background</item>
    </style>
    <style name="boldlin" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="personal_item_textview" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#656565</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="personal_item_imageview" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>

    </style>


</resources>
