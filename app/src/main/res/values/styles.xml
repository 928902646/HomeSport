<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="personal_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="personal_title_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/home_tab_pressed_color</item>
        <item name="android:layout_height">64dp</item>
    </style>
    <style name="personal_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@mipmap/navigation_return</item>
    </style>
    <style name="personal_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="PackTabLayout" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="android:textSize">35sp</item>
        <item name="tabSelectedTextColor">@android:color/holo_red_dark</item>
    </style>
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/gray</item>
        <item name="textAllCaps">false</item>
    </style>
    <!--分割线-->
    <style name="finelin" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/background</item>
    </style>
    <style name="boldlin" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/background</item>
    </style>
    <style name="personal_setting_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/day_edit_color</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="personal_setting_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:drawableRight">@mipmap/turn_right</item>
        <item name="android:textColor">@color/day_edit_color</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>
