<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/personal_layout"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        style="@style/personal_title_background"
        >
        <TextView
            android:id="@+id/tv_title"
            style="@style/personal_title"
            />
        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/btn_seach2"
            android:paddingTop="20dp"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:id="@+id/personal_back"
            style="@style/personal_back"
            />
    </RelativeLayout>

    <TextView
        style="@style/finelin"
        />
    <include layout="@layout/recycleview_layout"/>
</LinearLayout>
